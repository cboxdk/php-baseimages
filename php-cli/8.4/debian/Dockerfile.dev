FROM php:8.4-cli-bookworm

LABEL maintainer="Sylvester Damgaard <sn@cbox.dk>"
LABEL org.opencontainers.image.source="https://github.com/phpeek/baseimages"
LABEL org.opencontainers.image.description="PHP 8.4 CLI Debian Bookworm - Development with Xdebug"

ARG TARGETPLATFORM
ARG BUILDPLATFORM
ARG DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    bash \
    curl \
    wget \
    git \
    unzip \
    vim \
    # Database drivers
    libpq-dev \
    # Internationalization
    libicu-dev \
    # Compression
    libzip-dev \
    zlib1g-dev \
    # Misc
    libonig-dev \
    libsodium-dev \
    # Build essentials
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install PHP core extensions
RUN docker-php-ext-install -j$(nproc) \
    opcache \
    pdo_mysql \
    pdo_pgsql \
    zip \
    intl \
    bcmath \
    pcntl \
    sockets \
    calendar \
    gettext \
    shmop \
    sysvmsg \
    sysvsem \
    sysvshm

# Install PECL extensions including Xdebug
RUN pecl install redis-6.0.2 && \
    pecl install apcu-5.1.23 && \
    pecl install xdebug-3.3.1 && \
    docker-php-ext-enable redis apcu xdebug

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Keep build-essential for development
RUN rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Copy PHP configuration (dev version with Xdebug)
COPY php-cli/common/php-dev.ini /usr/local/etc/php/conf.d/99-custom.ini

# Create directories
RUN mkdir -p /var/www/html && \
    chown -R www-data:www-data /var/www && \
    mkdir -p /tmp/xdebug && \
    chown -R www-data:www-data /tmp/xdebug

WORKDIR /var/www/html

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD php -v || exit 1

CMD ["php", "-a"]
