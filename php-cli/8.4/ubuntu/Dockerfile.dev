FROM ubuntu:24.04

LABEL maintainer="Sylvester Damgaard <sn@cbox.dk>"
LABEL org.opencontainers.image.source="https://github.com/phpeek/baseimages"
LABEL org.opencontainers.image.description="PHP 8.4 CLI Ubuntu 24.04 - Development with Xdebug"

ARG TARGETPLATFORM
ARG BUILDPLATFORM
ARG DEBIAN_FRONTEND=noninteractive

# Add Ondrej PHP PPA for PHP 8.4
RUN apt-get update && apt-get install -y --no-install-recommends \
    software-properties-common \
    ca-certificates \
    && add-apt-repository ppa:ondrej/php \
    && apt-get update

# Install PHP-CLI and extensions including Xdebug
RUN apt-get install -y --no-install-recommends \
    php8.4-cli \
    php8.4-common \
    php8.4-xdebug \
    # Core extensions
    php8.4-opcache \
    php8.4-mysql \
    php8.4-pgsql \
    php8.4-sqlite3 \
    php8.4-redis \
    # Data formats
    php8.4-xml \
    php8.4-mbstring \
    php8.4-zip \
    # Internationalization
    php8.4-intl \
    # Math
    php8.4-bcmath \
    # Misc
    php8.4-curl \
    php8.4-apcu \
    # Development tools
    bash \
    curl \
    wget \
    git \
    unzip \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Copy PHP configuration (dev version with Xdebug)
COPY php-cli/common/php-dev.ini /etc/php/8.3/cli/conf.d/99-custom.ini

# Create directories
RUN mkdir -p /var/www/html && \
    chown -R www-data:www-data /var/www && \
    mkdir -p /tmp/xdebug && \
    chown -R www-data:www-data /tmp/xdebug

WORKDIR /var/www/html

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD php -v || exit 1

CMD ["php", "-a"]
