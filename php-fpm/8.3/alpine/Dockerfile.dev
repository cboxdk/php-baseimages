FROM php:8.3-fpm-alpine

LABEL maintainer="Sylvester Damgaard <sn@cbox.dk>"
LABEL org.opencontainers.image.source="https://github.com/phpeek/baseimages"
LABEL org.opencontainers.image.description="PHP 8.3 FPM Alpine - Development with Xdebug"

ARG TARGETPLATFORM
ARG BUILDPLATFORM

# Install system dependencies
RUN apk add --no-cache \
    bash \
    curl \
    wget \
    git \
    unzip \
    vim \
    # Image processing
    libpng-dev \
    libjpeg-turbo-dev \
    freetype-dev \
    libwebp-dev \
    libavif-dev \
    imagemagick-dev \
    imagemagick \
    # Database drivers
    postgresql-dev \
    # Internationalization
    icu-dev \
    icu-data-full \
    # XML processing
    libxml2-dev \
    libxslt-dev \
    # Compression
    libzip-dev \
    zlib-dev \
    bzip2-dev \
    # Misc
    oniguruma-dev \
    libsodium-dev \
    openldap-dev \
    imap-dev \
    krb5-dev \
    openssl-dev \
    linux-headers \
    gettext-dev \
    # Build tools
    $PHPIZE_DEPS

# Configure GD with support for multiple formats
RUN docker-php-ext-configure gd \
    --with-freetype \
    --with-jpeg \
    --with-webp \
    --with-avif

# Configure IMAP with Kerberos
RUN docker-php-ext-configure imap \
    --with-kerberos \
    --with-imap-ssl

# Install PHP core extensions
RUN docker-php-ext-install -j$(nproc) \
    opcache \
    pdo_mysql \
    pdo_pgsql \
    mysqli \
    pgsql \
    zip \
    intl \
    bcmath \
    gd \
    exif \
    pcntl \
    soap \
    sockets \
    xsl \
    calendar \
    gettext \
    shmop \
    sysvmsg \
    sysvsem \
    sysvshm \
    bz2 \
    ldap \
    imap

# Install PECL extensions including Xdebug
RUN pecl install redis-6.0.2 && \
    pecl install imagick && \
    pecl install apcu-5.1.23 && \
    pecl install xdebug-3.3.1 && \
    docker-php-ext-enable redis imagick apcu xdebug

# Install SPX profiler from source (not in PECL)
RUN cd /tmp && \
    git clone https://github.com/NoiseByNorthwest/php-spx.git && \
    cd php-spx && \
    phpize && \
    ./configure && \
    make && \
    make install && \
    docker-php-ext-enable spx && \
    cd / && rm -rf /tmp/php-spx

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Keep build dependencies for development
# RUN apk del $PHPIZE_DEPS  # Commented out for dev

# Copy PHP configuration (dev version with Xdebug)
COPY php-fpm/common/php-dev.ini /usr/local/etc/php/conf.d/99-custom.ini
COPY php-fpm/common/fpm-pool.conf /usr/local/etc/php-fpm.d/zz-custom.conf

# Create directories
RUN mkdir -p /var/www/html && \
    chown -R www-data:www-data /var/www && \
    mkdir -p /tmp/xdebug && \
    chown -R www-data:www-data /tmp/xdebug && \
    mkdir -p /tmp/spx && \
    chown -R www-data:www-data /tmp/spx

WORKDIR /var/www/html

EXPOSE 9000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD /usr/local/bin/healthcheck.sh || exit 1

CMD ["php-fpm"]
