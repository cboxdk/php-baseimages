FROM ubuntu:24.04

LABEL maintainer="Sylvester Damgaard <sn@cbox.dk>"
LABEL org.opencontainers.image.source="https://github.com/phpeek/baseimages"
LABEL org.opencontainers.image.description="PHP 8.2 FPM Ubuntu 24.04 - Development with Xdebug"

ARG TARGETPLATFORM
ARG BUILDPLATFORM
ARG DEBIAN_FRONTEND=noninteractive

# Add Ondrej PHP PPA for PHP 8.2
RUN apt-get update && apt-get install -y --no-install-recommends \
    software-properties-common \
    ca-certificates \
    && add-apt-repository ppa:ondrej/php \
    && apt-get update

# Install PHP-FPM and extensions including Xdebug
RUN apt-get install -y --no-install-recommends \
    php8.2-fpm \
    php8.2-cli \
    php8.2-common \
    php8.2-xdebug \
    # Core extensions
    php8.2-opcache \
    php8.2-mysql \
    php8.2-pgsql \
    php8.2-sqlite3 \
    php8.2-redis \
    php8.2-memcached \
    # Image processing
    php8.2-gd \
    php8.2-imagick \
    # Data formats
    php8.2-xml \
    php8.2-xsl \
    php8.2-soap \
    php8.2-mbstring \
    php8.2-zip \
    php8.2-bz2 \
    # Internationalization
    php8.2-intl \
    # Math
    php8.2-bcmath \
    php8.2-gmp \
    # Misc
    php8.2-curl \
    php8.2-ldap \
    php8.2-imap \
    php8.2-apcu \
    # Development tools
    bash \
    curl \
    wget \
    git \
    unzip \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Install SPX profiler from source (requires build tools)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    php8.2-dev \
    git \
    && cd /tmp \
    && git clone https://github.com/NoiseByNorthwest/php-spx.git \
    && cd php-spx \
    && phpize \
    && ./configure \
    && make \
    && make install \
    && echo "extension=spx.so" > /etc/php/8.2/mods-available/spx.ini \
    && phpenmod -v 8.2 spx \
    && cd / && rm -rf /tmp/php-spx \
    && rm -rf /var/lib/apt/lists/*

# Configure PHP-FPM to run in foreground
RUN sed -i 's/;daemonize = yes/daemonize = no/g' /etc/php/8.3/fpm/php-fpm.conf

# Copy PHP configuration (dev version with Xdebug)
COPY php-fpm/common/php-dev.ini /etc/php/8.3/fpm/conf.d/99-custom.ini
COPY php-fpm/common/fpm-pool.conf /etc/php/8.3/fpm/pool.d/zz-custom.conf

# Create directories
RUN mkdir -p /var/www/html && \
    chown -R www-data:www-data /var/www && \
    mkdir -p /tmp/xdebug && \
    chown -R www-data:www-data /tmp/xdebug && \
    mkdir -p /tmp/spx && \
    chown -R www-data:www-data /tmp/spx && \
    mkdir -p /run/php && \
    chown -R www-data:www-data /run/php

# Update FPM pool to listen on port 9000 instead of socket
RUN sed -i 's#listen = /run/php/php8.2-fpm.sock#listen = 9000#g' /etc/php/8.3/fpm/pool.d/www.conf

WORKDIR /var/www/html

EXPOSE 9000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD php-fpm8.3 -t || exit 1

CMD ["php-fpm8.3"]
